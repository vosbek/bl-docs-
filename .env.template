# Multi-Agent Jira Card Creation System Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# REPOSITORY CONFIGURATION (REQUIRED)
# =============================================================================
# Absolute path to the folder containing all your repositories
REPOSITORY_BASE_PATH=/path/to/your/repositories

# =============================================================================
# AWS BEDROCK CONFIGURATION (REQUIRED)
# =============================================================================
# Choose ONE of the following authentication methods:

# Method 1: AWS Profile (recommended)
AWS_PROFILE=your-sso-profile-name
AWS_REGION=us-east-1

# Method 2: AWS Access Keys (alternative)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_SESSION_TOKEN=your-session-token
# AWS_REGION=us-east-1

# =============================================================================
# ORACLE DATABASE CONFIGURATION (OPTIONAL)
# =============================================================================
# If you want database schema analysis, provide Oracle connection details
# ORACLE_JDBC_URL=jdbc:oracle:thin:@hostname:port:service
# ORACLE_USERNAME=your-db-username
# ORACLE_PASSWORD=your-db-password
# ORACLE_SCHEMA=your-schema-name

# =============================================================================
# JIRA CONFIGURATION (REQUIRED FOR CARD CREATION)
# =============================================================================
# Your Jira instance details
JIRA_BASE_URL=https://your-company.atlassian.net
JIRA_PAT=your-personal-access-token
JIRA_USERNAME=your-email@company.com

# =============================================================================
# APPLICATION CONFIGURATION (OPTIONAL)
# =============================================================================
DEBUG=false
LOG_LEVEL=INFO